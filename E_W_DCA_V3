//f_fillCell(testTable, 1, 1, "Winn Trade", str.tostring(nada), color.green, color.white)
//f_fillCell(testTable, 1, 2, "Loss Trade", str.tostring(nada), color.red, color.white)

//porcentaje_positivo = 2
